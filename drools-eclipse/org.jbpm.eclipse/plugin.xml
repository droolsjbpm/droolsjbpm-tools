           <installer
            id="jbpm.runtime_6.2.x_installer"
            product="jbpm"
            version="6.2.x"
            runtimeName="jBPM 6.2.x Runtime"
            class="org.kie.eclipse.runtime.DefaultRuntimeInstaller">
            <repository
               url="http://downloads.jboss.org/jbpm/release/6.2.0.Final/jbpm-6.2.0.Final-bin.zip"
               artifacts="jbpm.runtime_6.2.x.artifacts"
               type="zip"/>
         </installer>
         <artifacts id="jbpm.runtime_6.2.x.artifacts">
               <artifact include="*.jar"/>
