         </artifacts>

         <installer
            id="jbpm.runtime_6.3.x_installer"
            product="jbpm"
            version="6.3.x"
            runtimeName="jBPM 6.3.x Runtime"
            class="org.kie.eclipse.runtime.DefaultRuntimeInstaller">
            <repository
               url="http://downloads.jboss.org/jbpm/release/6.3.0.Final/jbpm-6.3.0.Final-bin.zip"
               artifacts="jbpm.runtime_6.3.x.artifacts"
               type="zip"/>
         </installer>
         <artifacts id="jbpm.runtime_6.3.x.artifacts">
               <artifact include="*.jar"/>
               <artifact include="lib/*.jar"/>
         </artifacts>

         <installer
            id="jbpm.runtime_6.3.x_installer"
            product="jbpm"
            version="6.3.x"
            runtimeName="jBPM 6.3.x Runtime"
            class="org.kie.eclipse.runtime.DefaultRuntimeInstaller">
            <repository
               url="http://downloads.jboss.org/jbpm/release/6.3.0.Final/jbpm-6.3.0.Final-bin.zip"
               artifacts="jbpm.runtime_6.3.x.artifacts"
               type="zip"/>
         </installer>
         <artifacts id="jbpm.runtime_6.3.x.artifacts">
               <artifact include="*.jar"/>
               <artifact include="lib/*.jar"/>
         </artifacts>

         <installer
            id="jbpm.runtime_6.4.x_installer"
            product="jbpm"
            version="6.4.x"
            runtimeName="jBPM 6.4.x Runtime"
            class="org.kie.eclipse.runtime.DefaultRuntimeInstaller">
            <repository
               url="http://downloads.jboss.org/jbpm/release/6.4.0.Final/jbpm-6.4.0.Final-bin.zip"
               artifacts="jbpm.runtime_6.4.x.artifacts"
               type="zip"/>
         </installer>
         <artifacts id="jbpm.runtime_6.4.x.artifacts">
               <artifact include="*.jar"/>
               <artifact include="lib/*.jar"/>
         </artifacts>
   </extension>
</plugin>
